<?xml version="1.0" encoding="ISO-8859-1"?>

<project name="cdkInchiWrapper" basedir="." default="compile">
	
	<property name="cdk.jar" value="lib/cdk-20060714.jar"/>
	
	<property name="src.dir" value="src"/>
	<property name="bin.dir" value="bin"/>
	
	<property name="jniInchi.dir" value="../jni-inchi-wrapper"/>
	
	<target name="init">
		<mkdir dir="${bin.dir}"/>
	</target>
	
	<target name="clean" description="Delete all generated files">
		<delete dir="${bin.dir}" failonerror="false"/>
	</target>
	
	<target name="compile" description="Compiles cdkWrapper" depends="init">
		<ant dir="${jniInchi.dir}" target="compile"/>
		<echo>COMPILING: cdk wrapper</echo>
		<javac
				srcdir="${src.dir}/net/sf/jniinchi/cdk"
				destdir="${bin.dir}"
				classpath="${jniInchi.dir}/bin;${cdk.jar}">
		    <include name="*.java" />
		</javac>
	</target>
</project>