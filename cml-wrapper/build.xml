<?xml version="1.0" encoding="ISO-8859-1"?>

<project name="cmlInchiWrapper" basedir="." default="compile">
	
	<property name="cml.jar" value="lib/jumbo53-20060817.jar"/>
	<property name="xom.jar" value="lib/xom-1.1.jar"/>
	
	<property name="src.dir" value="src"/>
	<property name="bin.dir" value="bin"/>
	
	<property name="jniInchi.dir" value="../jni-inchi-wrapper"/>
	
	<target name="init">
		<mkdir dir="${bin.dir}"/>
	</target>
	
	<target name="clean" description="Delete all generated files">
		<delete dir="${bin.dir}" failonerror="false"/>
	</target>
	
	<target name="compile" description="Compiles cmlWrapper" depends="init">
		<ant dir="${jniInchi.dir}" target="compile"/>
		<echo>COMPILING: cml wrapper</echo>
		<javac
				srcdir="${src.dir}/net/sf/jniinchi/cml"
				destdir="${bin.dir}"
				classpath="${jniInchi.dir}/bin;${cml.jar};${xom.jar}">
		    <include name="*.java" />
		</javac>
	</target>
</project>