<project xmlns="http://maven.apache.org/POM/4.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <modelVersion>4.0.0</modelVersion>
  <groupId>net.sf</groupId>
  <artifactId>jniinchi</artifactId>
  <packaging>jar</packaging>
  <version>0.4.1-SNAPSHOT</version>
  <name>JNI InChI Wrapper</name>
  <url>http://jniinchi.sourceforge.net/</url>
  <description>
    The JNI InChI Wrapper project provides JNI (Java Native Interface)
    wrappers for the InChI (International Chemical Identifier) C++
    library distributed by IUPAC.
  </description>
  <licenses>
    <license>
      <name>GNU Lesser General Public License</name>
      <url>http://www.fsf.org/licensing/licenses/lgpl.txt</url>
    </license>
  </licenses>

  <!--  <issueManagement>  </issueManagement>  -->
  <!--  <ciManagement>...</ciManagement>  -->
  <!--  <mailingLists>...</mailingLists>  -->
  <scm>
    <connection>
      scm:svn:http://jni-inchi.svn.sourceforge.net/svnroot/jni-inchi
    </connection>
    <developerConnection>
      scm:svn:https://jni-inchi.svn.sourceforge.net/svnroot/jni-inchi
    </developerConnection>
    <tag>HEAD</tag>
    <url>http://jni-inchi.svn.sourceforge.net/svnroot/jni-inchi</url>
  </scm>

  <distributionManagement>
    <repository>
      <id>wwmm</id>
      <name>WWMM</name>
      <url>dav:http://wwmm.ch.cam.ac.uk/maven2</url>
    </repository>
  </distributionManagement>

  <developers>
    <developer>
      <id>sea36</id>
      <name>Sam Adams</name>
      <email>sea36::at::cam.ac.uk</email>
      <organization>UCC, Cambridge</organization>
      <roles>
        <role>Developer</role>
      </roles>
    </developer>
  </developers>

  <contributors>
    <contributor>
      <name>Jim Downing</name>
      <organization>UCC, Cambridge</organization>
      <roles>
        <role>tester</role>
      </roles>
    </contributor>
  </contributors>

  <build>
    <plugins>

      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <configuration>
          <source>1.5</source>
          <target>1.5</target>
        </configuration>
      </plugin>

      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-jar-plugin</artifactId>
        <configuration>
          <archive>
            <manifest>
              <mainClass>net.sf.jniinchi.Main</mainClass>
            </manifest>
          </archive>
        </configuration>
      </plugin>

      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>exec-maven-plugin</artifactId>
        <version>1.0.1</version><!-- IMPORTANT: 1.0.2 is broken -->
        <executions>

          <execution>
            <id>build-native</id>
            <phase>process-classes</phase>
            <goals>
              <goal>exec</goal>
            </goals>
            <configuration>
              <executable>make</executable>
              <arguments>
                <argument>all</argument>
              </arguments>
            </configuration>
          </execution>

          <execution>
            <id>clean-native</id>
            <phase>clean</phase>
            <goals>
              <goal>exec</goal>
            </goals>
            <configuration>
              <executable>make</executable>
              <arguments>
                <argument>clean</argument>
              </arguments>
            </configuration>
          </execution>

        </executions>
      </plugin>

    </plugins>
  </build>

  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.0</version>
      <scope>test</scope>
    </dependency>
  </dependencies>

</project>
